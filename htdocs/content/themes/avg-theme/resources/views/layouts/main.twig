{{ include('layouts/header.twig') }}
    <div class="container">
        {% block main %}{% endblock %}
    </div>
{% if block ("galleryImage") is defined and gallery is not empty %}
    <div class="sectionGallery">

            <h3>Gallerie Image</h3>
		    <div class="gallery">
		    	{% for image in gallery %}
		    		<a href="#">{{ image.imgPath|raw }}</a>
		    	{% endfor %}
		    </div>

    </div>
{% endif %}

{% if block ("actualities") is defined %}
    <div class="sectionActuality">
        <h3>Les autres actualit√©s</h3>
        <div class="actusList">
            {% for actuality in actualities %}
            <div class="actu">
                <p class="dateActu">{{ actuality.date|date("d.m.Y") }}</p>
                {% if actuality.img is not empty %}
                  <div class="thumbnail">
                    {{ actuality.img|raw }}
                  </div>

                  {% else %}
                  <div class="thumbnail-default">
                    <img src="#" alt="">
                  </div>
                {% endif %}
                <h4>{{ actuality.title }}</h4>
                {% if actuality.resume is not empty %}
                  <p>{{ actuality.resume }}</p>
                {% endif %}
                <p><a href="{{ actuality.link }}">+</a></p>
            </div>
            {% endfor %}
        </div>
    </div>
{% endif %}

{{ include('layouts/footer.twig') }}
